<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.pod_droid.AccountActivity"
    tools:showIn="@layout/activity_account">

    <Button
        android:id="@+id/DThrough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:background="@color/colorAccent"
        android:text="Download Through"

        android:textColorLink="@color/colorAccent"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="39dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/Quality" />

    <Button
        android:id="@+id/Quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="Download Quality"

        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="39dp" />
</android.support.constraint.ConstraintLayout>
